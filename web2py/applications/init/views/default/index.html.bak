{{extend 'layout.html'}}

{{block header}}
    <header class="container-fluid background ">
      <div class="jumbotron text-center ">
          <table>
              <tr>
                  <td>{{=DIV(_class='')}}</td>
                   {{if response.title:}}
                  <td><h1>{{=response.title}}<small class='small-text'> {{=response.subtitle or ''}}</small></h1></td>
                   {{pass}}
              </tr>
          </table>
      </div>
    </header>
{{end}}

<h2>{{=message}}</h2>
<div class='twitter_login'>
{{=form}}
</div>
